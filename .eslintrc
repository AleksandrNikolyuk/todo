{
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended"
	],
	"parser": "babel-eslint",
	"plugins": [
		"material-ui"
	],
	"env": {
		"browser": true,
		"node": true,
		"mocha": true
	},
	"ecmaFeatures": {
		"jsx": true,
		"es6": true,
		"classes": true
	},
	"rules": {
		"material-ui/rule-name": 2,
		"comma-dangle": [1, "always-multiline"],
		"no-underscore-dangle" : 0,
		"max-len": [1, 180, 4],
		"arrow-body-style": [0],
		"react/jsx-no-bind": [0],
		"import/no-unresolved": [0]
	}
}